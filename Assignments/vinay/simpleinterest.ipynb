    "# simple  interest : v3\n",
    "# (p*r*t)/100\n",
    "def amount(p,r,t):\n",
    "    return p + si(p,r,t)\n",
    "\n",
    "def si(p, r, t):\n",
    "    res  = (p*r*t)/100\n",
    "    return res\n",
    "\n",
    "x = int(input(\"Enter  p:  \"))\n",
    "y = int(input(\"Enter  r:  \"))\n",
    "z = int(input(\"Enter  t:  \"))\n",
    "print(si(x,y,z))\n",
    "a = amount(x,y,z)\n",
    "print(a)"
